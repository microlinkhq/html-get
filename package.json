{
  "name": "html-get",
  "description": "Get the HTML from any website, using prerendering when is necessary.",
  "homepage": "https://nicedoc.com/microlinkhq/html-get",
  "version": "2.14.4",
  "main": "src/index.js",
  "bin": {
    "html-get": "bin/index.js"
  },
  "author": {
    "email": "josefrancisco.verdu@gmail.com",
    "name": "Kiko Beats",
    "url": "https://kikobeats.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/microlinkhq/html-get.git"
  },
  "bugs": {
    "url": "https://github.com/microlinkhq/html-get/issues"
  },
  "keywords": [
    "fetch",
    "get",
    "got",
    "headless",
    "html",
    "prerender",
    "request"
  ],
  "dependencies": {
    "@kikobeats/time-span": "~1.0.3",
    "@metascraper/helpers": "~5.43.0",
    "cheerio": "~1.0.0-rc.12",
    "css-url-regex": "~4.0.0",
    "debug-logfmt": "~1.2.0",
    "execall": "~2.0.0",
    "got": "~11.8.6",
    "html-encode": "~2.1.6",
    "html-urls": "~2.4.55",
    "is-html-content": "~1.0.0",
    "lodash": "~4.17.21",
    "mri": "~1.2.0",
    "p-cancelable": "~2.1.0",
    "p-retry": "~4.6.0",
    "replace-string": "~3.1.0",
    "top-sites": "~1.1.202"
  },
  "devDependencies": {
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "@ksmithut/prettier-standard": "latest",
    "async-listen": "latest",
    "ava": "6",
    "browserless": "latest",
    "c8": "latest",
    "ci-publish": "latest",
    "finepack": "latest",
    "git-authors-cli": "latest",
    "github-generate-release": "latest",
    "nano-staged": "latest",
    "npm-check-updates": "latest",
    "pretty": "latest",
    "puppeteer": "latest",
    "regex-iso-date": "latest",
    "simple-git-hooks": "latest",
    "standard": "latest",
    "standard-markdown": "latest",
    "standard-version": "latest"
  },
  "engines": {
    "node": ">= 10"
  },
  "files": [
    "bin",
    "scripts",
    "src"
  ],
  "scripts": {
    "clean": "rm -rf node_modules",
    "contributors": "(npx git-authors-cli && npx finepack && git add package.json && git commit -m 'build: contributors' --no-verify) || true",
    "lint": "standard-markdown README.md && standard",
    "postinstall": "node scripts/postinstall",
    "postrelease": "npm run release:tags && npm run release:github && (ci-publish || npm publish --access=public)",
    "prerelease": "npm run update:check && npm run contributors",
    "pretest": "npm run lint",
    "release": "standard-version -a",
    "release:github": "github-generate-release",
    "release:tags": "git push --follow-tags origin HEAD:master",
    "test": "c8 ava",
    "update": "ncu -u",
    "update:check": "ncu -- --error-level 2"
  },
  "license": "MIT",
  "ava": {
    "files": [
      "test/**/*.js",
      "!test/util.js"
    ],
    "timeout": "2m",
    "workerThreads": false
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "nano-staged": {
    "*.js": [
      "prettier-standard",
      "standard --fix"
    ],
    "*.md": [
      "standard-markdown"
    ],
    "package.json": [
      "finepack"
    ]
  },
  "simple-git-hooks": {
    "commit-msg": "npx commitlint --edit",
    "pre-commit": "npx nano-staged"
  }
}
